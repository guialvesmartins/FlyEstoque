@model IEnumerable<FlyEstoque.Models.GrupoProduto>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-4">
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Início</a></li>
        <li class="breadcrumb-item">Cadastro</a></li>
        <li class="breadcrumb-item"><a asp-controller="GrupoProduto" asp-action="Index">Grupo de Produto</a></li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <b>Cadastro de Grupo de Produto</b>
        </div>
        <div class="card-body">
            <p>
                <a autofocus class="btn btn-primary" asp-action="Create">Incluir Novo</a>
            </p>
            <table class="table" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                <div style="text-align: center">
                                    <a class="btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-bars"></i></a> |
                                    <a class="btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="js/datatables-simple-demo.js"></script>
</div>
