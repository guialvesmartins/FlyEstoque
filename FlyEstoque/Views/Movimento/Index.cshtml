@model IEnumerable<FlyEstoque.Models.Movimento>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-4">
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Início</a></li>
        <li class="breadcrumb-item">Movimento</a></li>
        <li class="breadcrumb-item"><a asp-controller="GrupoProduto" asp-action="Index">Movimentos</a></li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <b>Movimento de Estoque</b>
        </div>
        <div class="card-body">
            <a autofocus class="btn btn-success" asp-action="Create"><i class="fas fa-barcode"></i> Novo Movimento </a>
            <a class="btn btn-outline-warning" asp-action="Inventario"><i class="fas fa-book"></i> Inventário </a>
            </p>
            <table class="table" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Data e Hora
                        </th>
                        <th>
                            Produto
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Tipo de Movimento
                        </th>
                        <th>
                            Quantidade
                        </th>
                        <th>
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DtMovimento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Produto.Codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Produto.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoMovimento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                            <td>
                                <div style="text-align: center">
                                    <a class="btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                                    <a class="btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
