@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid px-4">
    <br />
    <div class="card mb-4">
        <div class="card-header">
            <p>Seja Bem Vindo ao FlyEstoque</p>
        </div>
        <div class="card-body" href="/Produto" >
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-header">Produtos</div>
                        <div style="text-align: center" class="card-body">
                            <h1>
                                <a style="text-decoration: none; color: white;" href="Produto">@ViewBag.QuantProd</a>
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-header">Movimentos</div>
                        <div style="text-align: center" class="card-body">
                            <h1>
                                <a style="text-decoration: none; color: white;" href="Movimento">@ViewBag.QuantMov</a>
</h1>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-header">Fazer Pedido</div>
                        <div style="text-align: center" class="card-body">
                            <h1>@ViewBag.FazerPed</h1>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-header">Em Falta</div>
                        <div style="text-align: center" class="card-body">
                            <h1>@ViewBag.EmFalta</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>